@model List<Intex_2017.Models.ViewModels.LabTechScheduleAssaysViewModel>
@{
    ViewBag.Title = "Schedule Assays";
}

<div class="row animated fadeInDown text-center">
    <br />
    <h2>Schedule Assays</h2>
</div>
<br />
<table class="table table-striped animated fadeInDown">
    <thead>
        <tr>
            <th>
                Assay No.
            </th>
            <th>
                Work Order No.
            </th>
            <th>
                Company
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Compound Name
            </th>
            <th>
                Assay Name
            </th>
            <th>
                Due Date
            </th>
            <th></th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.AssayID
            </td>
            <td>
                @item.WorkOrderID
            </td>
            <td>
                @item.CustCompany
            </td>
            <td>
                @item.CustFirstName @item.CustLastName
            </td>
            <td>
                @item.CompoundName
            </td>
            <td>
                @item.AssayNameDesc
            </td>
            <td>
                @item.DueDate.ToShortDateString()
            </td>
            <td>
                @Html.ActionLink("Schedule", "ScheduleOneAssay", "Assays", new { AssayID = item.AssayID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>

