@{
    ViewBag.Title = "SubmitSampleResults";
}
<br />
<div class="row text-center animated fadeInDown">
    <h3>Submit Results for Sample No. @ViewBag.TestTubeNumber in Assay No. @ViewBag.AssayID</h3>
</div>
<br />
<br />
<div class="row animated fadeInDown">
    <div class="col-md-5">
        @using (Html.BeginForm("UploadResults", "Assays", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <p>@ViewBag.Type Results File:</p>
            @Html.TextBox("UploadedFile", null, new { type = "file" })
            <br />
            @Html.Hidden("ReportType", (String)ViewBag.Type)
            @Html.Hidden("TestTubeNumber", (String)ViewBag.TestTubeNumber)
            @Html.Hidden("AssayID", (String)ViewBag.AssayID)
            @Html.Hidden("SampleTestID", (int?)ViewBag.SampleTestID)

            <input type="submit" class="btn btn-success" name="fileName" value="Upload" />
            <span>@ViewBag.Message</span>
        }
    </div>
</div>
