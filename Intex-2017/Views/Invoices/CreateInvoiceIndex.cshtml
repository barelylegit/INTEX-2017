@model List<Intex_2017.Models.ViewModels.BillingInvoiceIndexViewModel>
@{
    ViewBag.Title = "CreateInvoiceIndex";
}
<br /><br />
<div class="row text-center animated fadeInDown">
    <h3>Upload Data Reports</h3>
</div>
<br />
<table class="table table-striped animated fadeInDown">
    <thead>
        <tr>
            <th>
                Work Order No.
            </th>
            <th>
                Customer Name
            </th>
            <th>
                Company
            </th>
            <th>
                Compound Name
            </th>
            <th>
            </th>
        </tr>
    </thead>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.WorkOrderID
            </td>
            <td>
                @item.CustFirstName @item.CustLastName
            </td>
            <td>
                @item.CustCompany
            </td>
            <td>
                @item.CompoundName
            </td>
            <td>
                @Html.ActionLink("Upload Invoice", "UploadInvoice", "Invoices", new { InvoiceID = item.InvoiceID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }
</table>

