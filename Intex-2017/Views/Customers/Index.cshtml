@model IEnumerable<Intex_2017.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Customer Table</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            First Name
        </th>
        <th>
            Last Name
        </th>
        <th>
            Address
        </th>
        <th>
            Address 2
        </th>
        <th>
            City
        </th>
        <th>
            State
        </th>
        <th>
            Zip
        </th>
        <th>
            Email
        </th>
        <th>
            Phone
        </th>
        <th>
            PaymentMethod ID
        </th>
        <th>
            User Name
        </th>
        <th>
            Password
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CustFirstName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustLastName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustAddress1)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustAddress2)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustCity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustState)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustZip)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustEmail)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustPhone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PaymentMethodID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustUserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CustPassword)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.CustID }) |
            @Html.ActionLink("Details", "Details", new { id=item.CustID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.CustID })
        </td>
    </tr>
}

</table>
