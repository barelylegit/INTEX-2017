
@{
    ViewBag.Title = "TechDirector";
}

<div class="row animated fadeInDown">
    <h1>Welcome, @Request.Cookies["firstname"].Value @Request.Cookies["lastname"].Value.</h1>
</div>

<div class="row animated fadeIn">
    <h2>Technology Director of Pharmacology Dashboard</h2>
</div>

<br />
<br />
<div class="row">
    <div class="col-md-4 col-md-offset-2 text-center animated fadeInUp">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title text-center">Upload Data Reports</h3>
            </div>
            <div class="panel-body">
                <h3 class="text-center">
                    There are
                </h3>
                <h1 class="text-danger">@ViewBag.NoOfDataReports</h1>
                <h3 class="text-center">
                    assay(s) that require(s) Data Report Uploads.
                </h3>
                <br />
                @Html.ActionLink("See Assays", "DataReportIndex", "DataReports", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
    <div class="col-md-4 text-center animated fadeInUp">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title text-center">Upload Summary Reports</h3>
            </div>
            <div class="panel-body">
                <h3 class="text-center">
                    There are
                </h3>
                <h1 class="text-danger">@ViewBag.NoOfSummaryReports</h1>
                <h3 class="text-center">
                    Work Order(s) that require(s) Summary Report Uploads.
                </h3>
                @Html.ActionLink("See Work Orders", "SummaryReportIndex", "SummaryReports", null, new { @class = "btn btn-primary" })
            </div>
        </div>
    </div>
</div>
