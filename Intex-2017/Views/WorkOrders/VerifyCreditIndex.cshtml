@model List<Intex_2017.Models.ViewModels.VerifyCreditViewModel>
@{
    ViewBag.Title = "VerifyCreditIndex";
}

<h2>Verify Work Orders</h2>

<table class="table">
    <tr>
        <th>
            Work Order Number
        </th>
        <th>
            Customer Name
        </th>
        <th>
            Company
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.WorkOrderID
            </td>
            <td>
                @item.CustFirstName @item.CustLastName
            </td>
            <td>
                @item.CustCompany
            </td>
            <td>
                @Html.ActionLink("Verify Work Order", "VerifyCredit", new { id = item.WorkOrderID }, new { @class = "btn btn-primary" })
            </td>
        </tr>
    }

</table>

