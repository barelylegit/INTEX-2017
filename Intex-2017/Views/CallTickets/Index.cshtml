@model List<Intex_2017.Models.ViewModels.OpenTicketsViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Customer Name
        </th>
        <th>
            Company
        </th>
        <th>
            Subject
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @item.CustFirstName @item.CustLastName
        </td>
        <td>
            @item.CustCompany
        </td>
        <td>
            @item.Subject
        </td>
        <td>
            @Html.ActionLink("See Ticket", "Details", new { id=item.CallTicketID }, new { @class = "btn btn-primary"})
            @Html.ActionLink("Close", "Delete", new { id=item.CallTicketID }, new { @class = "btn btn-danger"})
        </td>
    </tr>
}

</table>
