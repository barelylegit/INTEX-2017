
@{
    ViewBag.Title = "EmployeeLogin";
}



<div class="jumbotron animated fadeIn" style="background-color: #ddd">
    <div class="row text-center">
        <h2>Employee Login</h2>
    </div>

    <div class="text-center">
        @using (Html.BeginForm("EmployeeLogin", "Login", FormMethod.Post))
        {
            <div class="row"><span class="text-danger text-center">@ViewBag.Message</span></div>
            <br />
            <div class="row">
                <label for="inputEmail">Username:</label>
                @Html.TextBox("userName")
            </div>
            <br />
            <div class="row">
                <label for="inputPassword">Password:</label>
                @Html.Password("Password")
            </div>
            <br />

            <div class="row">
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                </div>
                <div class="col-md-3">
                    <button class="btn btn-primary" type="submit">Login</button>
                </div>
                <div class="col-md-3">
                </div>
            </div>
        }
    </div>
    <br />
    <br />
</div>
